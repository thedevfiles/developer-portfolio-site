---
import Badge from "./Badge.astro";
import { Image } from "astro:assets";
const { slug, title, image, technologies } = Astro.props;
const transition = {
  title: `project-title-${slug}`,
  image: `project-image-${slug}`,
};
---
<div class="mt-10 grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div class="space-y-6">
        <slot />
        <div class="space-y-1">
          <div class="text-lg">Technologies</div>
          <div class="flex flex-wrap gap-2">
            {
              technologies.map(technology => (
                <Badge color="primary">{technology}</Badge>
              ))
            }
          </div>
        </div>
      </div>
      <Image
        src={image}
        alt={title}
        widths={[800, 600, 300]}
        transition:name={transition.image}
      >
      </Image>
    </div>
