---
import Button from "./Button.astro";
import Container from "./Container.astro";
const {classes} = Astro.props
---

<div class:list={["bg-fuchsia-600 text-white selection:bg-white selection:text-fuchsia-600 py-32", classes]} {...Astro.props}>
    <Container>
        <div class="flex justify-between items-center">
        <p class="text-2xl">Interested in working together?</p>
        <a href="/contact/" class="bg-white hover:bg-fuchsia-100 py-2 px-8 text-fuchsia-600 text-2xl font-light uppercase tracking-widest rounded shadow">Contact Me</a>
        </div>
    </Container>
</div>
