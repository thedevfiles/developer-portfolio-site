---
import Button from "../components/Button.astro";
import Badge from "./Badge.astro";
import Link from "./Link.astro";
import { Image } from "astro:assets";
const { slug, title, image, technologies } = Astro.props;

const transition = {
  title: `project-title-${slug}`,
  image: `project-image-${slug}`,
};
---

<a href={`/projects/${slug}`} class="block text-center hover:text-fuchsia-500">
  <figure>
  <Image
    src={image}
    alt={title}
    widths={[350, 600]}
    class="w-full aspect-video bg-gray-400"
    transition:name={transition.image}
  />
  <figcaption class="text-2xl" transition:name={transition.title}>{title}</figcaption>
  </figure>
</a>
