---
import { Image } from "astro:assets";
import photo from "../images/jonathan-bernardi-square.jpg";
const {classes} = Astro.props;
---

<Image
  src={photo}
  alt=""
  width={Math.floor(photo.width / 2)}
  height={Math.floor(photo.height / 2)}
  densities={[1.5, 2]}
  class:list={["w-16 h-16 rounded-full", classes]}
/>
